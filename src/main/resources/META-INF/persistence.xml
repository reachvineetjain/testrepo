<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
    xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="cci_gh_go" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <mapping-file>META-INF/orm.xml</mapping-file>
        <class>com.ccighgo.db.entities.Ccistaffrole</class>
        <class>com.ccighgo.db.entities.CcistaffrolesDefaultresourcepermission</class>
        <class>com.ccighgo.db.entities.CcistaffrolesDefaultresourcepermissionPK</class>
        <class>com.ccighgo.db.entities.CcistaffrolesDepartment</class>
        <class>com.ccighgo.db.entities.Ccistaffuser</class>
        <class>com.ccighgo.db.entities.CcistaffusersCcistaffrole</class>
        <class>com.ccighgo.db.entities.CcistaffusersCcistaffrolePK</class>
        <class>com.ccighgo.db.entities.CcistaffusersDepartment</class>
        <class>com.ccighgo.db.entities.CcistaffusersDepartmentPK</class>
        <class>com.ccighgo.db.entities.CcistaffusersResourcepermission</class>
        <class>com.ccighgo.db.entities.CcistaffusersResourcepermissionPK</class>
        <class>com.ccighgo.db.entities.Country</class>
        <class>com.ccighgo.db.entities.Departmentfunction</class>
        <class>com.ccighgo.db.entities.Departmentprogramoption</class>
        <class>com.ccighgo.db.entities.Departmentprogram</class>
        <class>com.ccighgo.db.entities.Department</class>
        <class>com.ccighgo.db.entities.History</class>
        <class>com.ccighgo.db.entities.Login</class>
        <class>com.ccighgo.db.entities.OauthHistory</class>
        <class>com.ccighgo.db.entities.OauthHistoryPK</class>
        <class>com.ccighgo.db.entities.PasswordHistory</class>
        <class>com.ccighgo.db.entities.Resourceaction</class>
        <class>com.ccighgo.db.entities.Resourcegroup</class>
        <class>com.ccighgo.db.entities.Resourcepermission</class>
        <class>com.ccighgo.db.entities.Sysdiagram</class>
        <class>com.ccighgo.db.entities.UserType</class>
        <class>com.ccighgo.db.entities.Usstate</class>
        <class>com.ccighgo.db.entities.DepartmentResourcegroup</class>
        <class>com.ccighgo.db.entities.DepartmentResourcegroupPK</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cci_gh_go" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="sunny" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.c3p0.min_size" value="5" />
            <property name="hibernate.c3p0.max_size" value="20" />
            <!-- <property name="hibernate.c3p0.max_size">1800</property> -->
            <property name="hibernate.c3p0.max_statements" value="50" />

            <property name="connection.provider_class"
                value="org.hibernate.connection.C3P0ConnectionProvider" />
            <property name="c3p0.max_statements" value="0" />
            <property name="c3p0.maxIdleTimeExcessConnections" value="3600" />
            <property name="c3p0.idleConnectionTestPeriod" value="3600" />
            <property name="c3p0.maxIdleTime" value="3600" />
        </properties>
    </persistence-unit>
</persistence>

